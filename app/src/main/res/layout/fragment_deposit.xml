<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".wallet.DepositFragment">

    <LinearLayout
       android:paddingTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#47494C"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:padding="5dp"
            android:background="#000000"
            android:textColor="@color/white"
            android:text="@string/personal_number"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <TextView
            android:padding="10dp"
        android:background="@color/white"
            android:textColor="@color/Red"
            android:text="@string/verify_text"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <RadioGroup
            android:id="@+id/selectDepositRadioGroup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/linearLayout">

            <RadioButton
                android:id="@+id/selectDepositBkash"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_bkash"
                android:text="Bkash"
                android:textColor="#BFBAB9"
                android:textSize="20sp" />


            <RadioButton
                android:id="@+id/selectDepositRocket"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/rocket"
                android:text="Rocket"
                android:textColor="#BFBAB9"
                android:textSize="20sp" />

            <RadioButton
                android:id="@+id/selectDepositNagot"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:padding="10dp"
                android:drawablePadding="10dp"
                android:drawableLeft="@drawable/ic_nagad"
                android:text="nagad"
                android:textColor="#BFBAB9"
                android:textSize="20sp" />


        </RadioGroup>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/depositAmount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Amount"
                android:textColor="@color/LightBlue"
                android:textSize="17sp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/depositNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Number"
                android:textColor="@color/LightBlue"
                android:textSize="17sp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>


        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/depositTransaction"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="50dp"
            app:endIconMode="clear_text"
            android:padding="5dp">

            <com.google.android.material.textfield.TextInputEditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Transaction id"
                android:textColor="@color/LightBlue"
                android:textSize="17sp">

            </com.google.android.material.textfield.TextInputEditText>

        </com.google.android.material.textfield.TextInputLayout>

        <Button
            android:id="@+id/depositSubmitButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="70dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="70dp"
            android:layout_marginBottom="10dp"
            android:background="@color/ivory"
            android:text="Submit"
            android:textColor="#2D2F31"
            app:cornerRadius="5dp" />


    </LinearLayout>


</ScrollView>